{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de Usuarios</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Usuario</th>
                <th>ID Perfil</th>
                <th>Nombre_usuario</th>
                <th>Fecha_creacion</th>
                <th>Fecha_modificacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td><a href="{{ path('usuario_show', { 'id': usuario.id }) }}">{{ usuario.id }}</a></td>
                <td><a href="{{ path('perfil_show', { 'id': usuario.perfil.id }) }}">{{ usuario.perfil.id }}</a></td>
                <td>{{ usuario.nombreusuario }}</td>
                <td>{% if usuario.fechacreacion %}{{ usuario.fechacreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if usuario.fechamodificacion %}{{ usuario.fechamodificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('usuario_show', { 'id': usuario.id }) }}" class="btn btn-success" role="button">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}" class="btn btn-danger" role="button">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('persona_default_index') }} " class="btn btn-dark" role="button">Volver</a>
            <a href="{{ path('usuario_new') }}" class="btn btn-info" role="button">Crear nuevo usuario</a>
        </li>
    </ul>
{% endblock %}
