{% extends 'base.html.twig' %}

{% block body %}
    <h1>Perfil</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ perfil.id }}</td>
            </tr>
            <tr>
                <th>Nombre_perfil</th>
                <td>{{ perfil.nombreperfil }}</td>
            </tr>
            <tr>
                <th>Fecha_creacion</th>
                <td>{% if perfil.fechacreacion %}{{ perfil.fechacreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha_modificacion</th>
                <td>{% if perfil.fechamodificacion %}{{ perfil.fechamodificacion|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('perfil_index') }}" class="btn btn-info" role="button">Volver a la lista</a>
        </li>
        <li>
            <a href="{{ path('perfil_edit', { 'id': perfil.id }) }}" class="btn btn-dark" role="button">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Borrar" class="btn btn-danger" role="button">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
